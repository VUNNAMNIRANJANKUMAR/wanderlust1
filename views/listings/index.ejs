  <style>
    #filters {
      display: flex;
      flex-wrap: wrap;
      align-items: center;
    }

    .filter {
      text-align: center;
      margin-right: 1.5rem;
      margin-top: 1rem;
      opacity: 0.5;
      text-decoration: none;
      color: black;
      
    }
    .filter a{
      text-decoration: none;
      color: black;

    }

    .filter:hover {
      opacity: 1;
      cursor: pointer;
    }

    .filter p {
      font-size: 0.8rem;
    }

    .tax-info {
      display: none;
    }

    .tax-toggle {
      border: 1px solid black;
      border-radius: 1rem;
      height: 2.5rem;
      padding: 1rem;
      margin-left: 0.4rem;
      display: flex;
      align-items: center;
    }
  </style>
